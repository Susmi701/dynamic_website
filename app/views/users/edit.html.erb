<%= stylesheet_link_tag '/form.css' %>

<main class="form_main">                
    <section class="container" >                 
    <%= form_with model: @user do |f| %>  
            <div class="text">
                <h3>    Edit User  </h3>
            </div>  
            
                <div class="data">
                    <%= f.label :username %> </br>
                    <%= f.text_field :username , readonly: true %>
                    <% @user.errors.full_messages_for( :username).each do |message| %>
                        <div class="error-message"><%= message %></div>
                      <% end %>
                </div> 
                
                <%= render 'form', f: f  %>
                     
                <div class="btn">
                    <%=  f.submit "Update" %>
                </div>           
        <% end %>
    </section>
</main>

