<%= stylesheet_link_tag '/form.css' %>

<main class="form_main">   
    <div class="container">
        <div class="text">
            Login
        </div>
        <%= form_with url: login_path do |f| %>
            <div class="data">
                <%= f.label :username %></br>
                <%= f.text_field :username %>                
            </div>
            <div class="data">
                <%= f.label :password %></br>
                <%= f.password_field :password %>
            </div>
            <div class="btn">
                <%= f.submit "Log In!" %>
            </div>
        <% end %>
    </div>              
</main>